<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/BackgroundMain"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.tan.qunlhcsinh.MainActivity"
    android:weightSum="1">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtSearch"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="Nhập tên học sinh"
        android:background="@color/blue"
        android:padding="5dp"
        android:gravity="center_horizontal"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@id/edtSearch"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnAdd"
        android:layout_alignBottom="@+id/listView"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView"
        android:src="@android:drawable/ic_input_add" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtnResert"
        android:src="@android:drawable/ic_delete"
        android:layout_alignBottom="@+id/listView"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignStart="@+id/listView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm"
        android:padding="8dp"
        android:id="@+id/btnSearch"
        android:background="@color/dimGray"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/edtSearch"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignBottom="@+id/edtSearch" />


</RelativeLayout>
